---
layout: base
class: single
---

{% include nav.liquid %}
<article class="single-project">
  <section class="project__copy">
    <div class="project__text">
      <h2 class="project__person">
        {{title}}
        <span class="project__course">{{course}}</span>
      </h2>
      <h3 class="project__title">{{project_title}}</h3>
      {% if prof %}
      <p class="project__supervisor">Betreuung: {{prof}}</p>
      {% endif %}
      <div class="project__body">
        {{content}}
      </div>
      <ul class="project__links">
        {% for l in links %}
        <li>
          <a href="{{l.url}}">
            {{l.url | cleanURL }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </section>
  <section class="project__images">
    {% for i in gallery%}
    {% if i.image contains ".mp4" %}
    <video muted autoplay playsinline loop class="project__image" src="{{i.image | url}}"></video>
    {% else %}
    <img class="project__image" src="{{i.image | url}}" alt="{{i.alt}}" />
    {% endif %}
    {% endfor %}
  </section>
</article>