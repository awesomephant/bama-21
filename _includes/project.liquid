---
layout: base
---

<article class="single-project">
  <section class="project__copy">
    {% include nav.liquid %}
    <div class="project__text">
      <h2 class="project__person">{{title}}</h2>
      <h3 class="project__title">{{project_title}}</h3>
      <p class="project__supervisor">{{prof}}</p>
      <div class="project__body">
        {{content}}
        <ul class="project__links">
          {% for l in links %}
          <li>
            <a href="{{l.url}}">
              {{l.url | cleanURL }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </section>
  <section class="project__images">
    {% for i in gallery%}
    {% if i.image contains ".mp4" %}
    <video muted autoplay playsinline loop class="project__image" src="{{i.image | url}}" />
    {% else %}
    <img class="project__image" src="{{i.image | url}}" alt="{{i.alt}}" />
    {% endif %}
    {% endfor %}
  </section>
</article>